{
    "compileOnSave": true,
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "allowJs": true,
      "baseUrl": "./lib",
      "allowSyntheticDefaultImports": true,
      "types": ["node", "jest"]
      // "typeRoots": ["lib/@types", "node_modules/@types"]
    },
    "include": ["lib/**/*.ts"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"]
  }
  